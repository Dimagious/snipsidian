{
    "name": "snipsidian",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "build": "npm run build:css && esbuild src/main.ts --bundle --outfile=main.js --minify --platform=node --format=cjs --target=es2020 --external:obsidian --external:electron --external:@codemirror/state --external:@codemirror/view --footer:js=\"module.exports = module.exports.default || module.exports;\"",
        "build:css": "node scripts/build-css.cjs",
        "build:vault": "node scripts/build-vault.cjs",
        "dev:vault": "node scripts/build-vault.cjs --watch",
        "test": "vitest run --coverage",
        "coverage": "vitest run --coverage",
        "release:check": "node scripts/version-sync.cjs && npm run test && npm run build",
        "release:zip": "node scripts/make-zip.cjs",
        "release": "npm run release:check && npm run release:zip",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "tree": "tree -L 3 -I 'node_modules|coverage'"
    },
    "dependencies": {
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@microsoft/eslint-plugin-sdl": "^1.1.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.12.12",
        "@vitest/coverage-v8": "^3.2.4",
        "esbuild": "^0.23.0",
        "eslint": "^9.39.1",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-obsidianmd": "^0.1.7",
        "jsdom": "^26.1.0",
        "obsidian": "^1.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.5.0",
        "typescript-eslint": "^8.46.3",
        "vitest": "^3.2.4"
    }
}
